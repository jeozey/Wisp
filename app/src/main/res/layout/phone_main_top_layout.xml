<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme"
        android:gravity="center_vertical"
        android:paddingBottom="10.0dip"
        android:paddingTop="10.0dip">

        <TextView
            android:id="@+id/top_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="22.0sp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/top_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5.0dip"
                android:clickable="true"
                android:drawableLeft="@mipmap/person_ico"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="用户"
                android:textColor="@android:color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true">


                <TextView
                    android:id="@+id/setting_btn"
                    android:layout_width="65.0dip"
                    android:layout_height="40.0dip"
                    android:layout_marginRight="10.0dip"
                    android:layout_toLeftOf="@+id/setting_menu"
                    android:background="@mipmap/navbtn"
                    android:gravity="center"
                    android:visibility="gone"
                    android:textColor="#ffffff"
                    android:text="@string/setting" />

                <TextView
                    android:id="@+id/logout_btn"
                    android:layout_width="65.0dip"
                    android:layout_height="40.0dip"
                    android:layout_marginRight="10.0dip"
                    android:layout_toLeftOf="@+id/setting_btn"
                    android:background="@mipmap/navbtn"
                    android:gravity="center"
                    android:visibility="gone"
                    android:textColor="#ffffff"
                    android:text="@string/logout" />

                <!-- 
                <TextView
                    android:id="@+id/setting_menu"
                    android:layout_width="55.0dip"
                    android:layout_height="30.0dip"
                    android:layout_marginRight="10.0dip"
                    android:background="@mipmap/navbtn"
                    android:gravity="center"
                    android:text="@string/more" />
                     -->
                <ImageView
                    android:id="@+id/setting_menu"
                    android:layout_width="55.0dip"
                    android:layout_height="30.0dip"
                    android:layout_marginRight="10.0dip"
                    android:src="@drawable/more_menu_selector"
                    android:visibility="gone"
                    android:gravity="center" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/topLine"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:background="#ff000000"
        android:orientation="horizontal" />


</LinearLayout>