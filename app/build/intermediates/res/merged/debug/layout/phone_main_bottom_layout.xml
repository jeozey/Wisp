<?xml version="1.0" encoding="utf-8"?><!-- 底部菜单栏 -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@drawable/bottom_bg_style"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/bottom_button_lay1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"></LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/bottom_scroll_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/morel"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_scroll_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/morer"
            android:orientation="horizontal"></LinearLayout>

        <HorizontalScrollView
            android:id="@+id/bottom_button_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/bottom_scroll_right"
            android:layout_toRightOf="@id/bottom_scroll_left"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/bottom_button_lay2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"></LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>

</LinearLayout><!-- From: file:/F:/WISP_SAFE_ANDROID_4.0/Wisp/app/src/main/res/layout/phone_main_bottom_layout.xml -->